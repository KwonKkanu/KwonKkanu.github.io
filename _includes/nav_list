<nav class="nav__list">
  {% if page.sidebar.title %}
    <h3 class="nav__title" style="padding-left: 0;">{{ page.sidebar.title }}</h3>
  {% endif %}
  <input id="ac-toc" name="accordion-toc" type="checkbox" />
  <label for="ac-toc">{{ site.data.ui-text[site.locale].menu_label | default: "Toggle Menu" }}</label>

  <ul class="nav__items">
    {% for navname in include.nav %}
      {% assign navigation = site.data.navigation[navname] %}
      {% for nav in navigation %}
        <li>
          {% if nav.url %}
            <a href="{{ nav.url | relative_url }}"><span class="nav__sub-title">{{ nav.title }}</span></a>
          {% else %}
            <span class="nav__sub-title">{{ nav.title }}</span>
          {% endif %}

          {% if nav.children %}
            <ul>
              {% for child in nav.children %}
                <li>
                  {% if child.url %}
                    <a href="{{ child.url | relative_url }}"{% if child.url == page.url %} class="active"{% endif %}>{{ child.title }}</a>
                  {% else %}
                    <span>{{ child.title }}</span>
                  {% endif %}

                  {%- if child.children -%}
                    {%- include nav_list items=child.children -%}
                  {%- endif -%}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    {% endfor %}
  </ul>
</nav>

{% comment %}
재귀 호출 모드: include.items가 있을 때는 바로 순환
{% endcomment %}
{% if include.items %}
  <ul>
    {% for item in include.items %}
      <li>
        {% if item.url %}
          <a href="{{ item.url | relative_url }}"{% if item.url == page.url %} class="active"{% endif %}>{{ item.title }}</a>
        {% else %}
          <span>{{ item.title }}</span>
        {% endif %}

        {% if item.children %}
          {% include nav_list items=item.children %}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endif %}
